<style>
    .aul {
        width: 100%;
        background-color: #E79633;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .aul:hover {
            background-color: #D98C2F;
            text-decoration: none;
            color: white;
        }

    .divul {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    p {
        font-size: 15px;
    }
</style>
<div class="container" style="display:inline-flex">
    <div style="height: 140px; width: 350px; display: flex; align-items: center; ">
        <p style=" margin: 0px -17px 8px; font-size: 46px; font-weight: 500; line-height: 100%;"><b>Lista profesori</b></p>

    </div>
</div>

@foreach (var profesor in ViewBag.Profesors)
{
    <div class="divul">
        <p><b>Nume de familie: </b>@profesor.Nume</p>
        <p><b>Prenume: </b>@profesor.Prenume</p>
        <p><b>Gradul didactic: </b>@profesor.GradDidactic</p>
        <br />
        <a class="aul" href="/Profesors/Show/@profesor.ProfesorId">Afisare profesor</a>
        <br />
    </div>
    <br />
    
}
<br />
<a class="aul" href="/Profesors/New">Adauga un nou profesor</a>
<br />