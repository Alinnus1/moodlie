@model moodlie.Models.Curs
<style>
    input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        max-width: none;
    }

    .aul {
        width: 100%;
        background-color: #E79633;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .aul:hover {
        background-color: #D98C2F;
        color:azure;
    }

    .divul {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
    p {
        font-size: 15px;

    }
</style>

<div class="container" style="display:inline-flex">
    <div style="height: 140px; width: 450px; display: flex; align-items: center; ">
        <p style=" margin: 0px -17px 8px; font-size: 46px; font-weight: 500; line-height: 100%;"><b>Adaugare student la cursul selectat</b></p>
    </div>
</div>
<h2>@Model.Nume</h2>
<div style="overflow-y:scroll;">
    @foreach (var student in ViewBag.Students)
    {
     <div class="divul">
        <div class="panel-body">
            <p><strong>@student.Prenume @student.Nume</strong></p>
         
            <p >An de studiu:  @student.AnStudiu</p>
            <br />
            <a class="aul" style="text-decoration:none" href="/Curses/NewStudentAct/@Model.CursId/@student.StudentId/">Inscrie student</a>
        </div>
     </div>
     <hr />
    }
    

</div>
<br />
<a class="aul" href="/Curses/Show/@Model.CursId"> Intoarce-te la pagina cursului </a>


