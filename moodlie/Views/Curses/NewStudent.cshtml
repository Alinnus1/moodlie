<style>
    input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        max-width: none;
    }

    button[type=submit] {
        width: 100%;
        background-color: #E79633;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button[type=submit]:hover {
            background-color: #D98C2F;
        }

    .divul {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
</style>

<div class="container" style="display:inline-flex">
    <div style="height: 140px; width: 450px; display: flex; align-items: center; ">
        <p style=" margin: 0px -17px 8px; font-size: 46px; font-weight: 500; line-height: 100%;"><b>Adaugare student la cursul selectat</b></p>
    </div>
</div>
<div class="divul">
    <form method="post" action="/Curses/NewStudent/@ViewBag.IdCurs">
        @Html.HttpMethodOverride(HttpVerbs.Put)
        <br />
        @Html.DropDownList("student", new SelectList(ViewBag.Students, "Value", "Text"),
            "Selectati student", new { @class = "form-control" })
        <br />
        <br />
        <button class="button6" type="submit"> Adauga student</button>
    </form>
</div>


