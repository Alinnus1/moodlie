<style>
    .aul {
        width: 100%;
        background-color: #E79633;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .aul:hover {
            background-color: #D98C2F;
            text-decoration: none;
            color: white;
        }

    .divul {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    p {
        font-size: 15px;
    }
</style>
<div class="container" style="display:inline-flex">
    <div style="height: 140px; width: 350px; display: flex; align-items: center; ">
        <p style=" margin: 0px -17px 8px; font-size: 46px; font-weight: 500; line-height: 100%;"><b>Lista cursuri</b></p>

    </div>
</div>
@foreach (moodlie.Models.Curs curs in ViewBag.Curses)
{
    <div class="divul">
        <p><b>Nume cursului: </b>@curs.Nume</p>
        <p><b>Profesorul titular: </b>@curs.ProfesorTitular.Nume @curs.ProfesorTitular.Prenume</p>
        <br />
        <a class="aul" href="/Curses/Show/@curs.CursId">Afisare curs</a>
        <br />

    </div>
    <br />

}
@if (User.IsInRole("Admin"))
{
    <br />
    <a class="aul" href="/Curses/New">Adauga alt curs</a>
    <br />
}
