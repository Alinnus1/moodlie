<style>

    .aul {
        width: 100%;
        background-color: #E79633;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        max-width:190px;
    }

    .aul:hover {
            background-color: #D98C2F;
            text-decoration: none;
            color: white;
    }

    .divul {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    p {
        font-size: 15px;
    }
</style>
<div class="container" style="display:inline-flex">
    <div style="height: 140px; width: 350px; display: flex; align-items: center; ">
        <p style=" margin: 0px -17px 8px; font-size: 46px; font-weight: 500; line-height: 100%;"><b>Afisare student</b></p>

    </div>
</div>
<p><b>Nume de familie: </b>@ViewBag.Student.Nume</p>
<p><b>Prenume: </b>@ViewBag.Student.Prenume</p>
<p><b>An de studiu: </b>@ViewBag.Student.AnStudiu</p>
<br />
<a class="aul" href="/Students/Edit/@ViewBag.Student.StudentId">
    Modifica
    student
</a>

<form method="post"
      action="/Students/Delete/@ViewBag.Student.StudentId">
    @Html.HttpMethodOverride(HttpVerbs.Delete)
    <br />
    <button class="aul" style="background-color:darkred" type="submit">Sterge studentul</button>
</form>
<hr />
<a class="aul" href="/Students/New">Adauga un nou student</a>
<br />
<br />
<br />

<a class="aul" href="/Students/Index">Inapoi la lista studentilor</a>
